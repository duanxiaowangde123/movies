<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.duan.mapper.TeacherMapper">
 	 <insert id="insertOneTeacherStatic" useGeneratedKeys="true">
